{
    "compilerOptions": {
        "outDir": "./dist",
        "module":"CommonJS",
        "target": "ES2021",
        "esModuleInterop": true,
        "allowJs": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictFunctionTypes": false,
        "lib": [
            "ES2021.String"
        ]
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}